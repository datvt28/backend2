extends layout

block content
  .container
    h2 👥 Quản lý người dùng

    table
      thead
        tr
          th 👤 Tên đăng nhập
          th ⚙️ Hành động
      tbody
        each user in users
          tr
            td= user.username
            td
              a.button(href=`/reset/${user.username}`) 🔄 Reset mật khẩu
              a.button.danger(href=`/remove/${user.username}` onclick='return confirm("Bạn có chắc muốn xoá người dùng này?")') 🗑 Xoá
