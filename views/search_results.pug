extends layout

block content
  header.navbar
    h1 🔍 Kết quả tìm kiếm cho "#{q}"
    a.button(href="/") Quay lại

  .container
    if notes.length === 0
      .alert.alert-info Không tìm thấy ghi chú nào.
    else
      .notes
        each note in notes
          .note(class=note.pinned ? "pinned" : "")
            if note.image
              img(src=note.image, alt="Ảnh")
            p= note.text
            .note-footer
              if note.pinned
                span 📌 Đã ghim
              a.button(href=`/edit/${note._id}`) ✏️ Sửa
              a.button.danger(href=`/delete/${note._id}` onclick='return confirm("Bạn có chắc muốn xoá?")') 🗑️ Xoá
