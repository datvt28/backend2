doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel="stylesheet", href="/styles.css")
    link(rel="icon", href="/icon.png", type="image/png")
  body
    header
      .container
        h1 Web Quản Lý Ghi Chú
        if username
          .user-info
            span Xin chào, #{username}!
            a(href="/logout") Đăng xuất
        else
          .user-info
            a(href="/login") Đăng nhập
            a(href="/register") Đăng ký
    main
      block content
    footer
      .container
        p © 2025 - Ghi chú cá nhân bởi Đạt
